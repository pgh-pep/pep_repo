<?xml version="1.0"?>
<robot name="boat_model" xmlns:xacro="http://ros.org/wiki/xacro">

    <!-- Boat Hull -->
    <link name="hull">
        <visual>
            <geometry>
                <box size="3 1 0.5" />
            </geometry>
            <material name="blue">
                <color rgba="0.0 0.0 0.8 1.0" />
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="3 1 0.5" />
            </geometry>
        </collision>
        <inertial>
            <mass value="50" />
            <origin xyz="0 0 0" />
            <inertia ixx="5" ixy="0" ixz="0" iyy="5" iyz="0" izz="5" />
        </inertial>
    </link>

    <!-- Rudder -->
    <link name="rudder">
        <visual>
            <geometry>
                <box size="0.1 0.3 0.02" />
            </geometry>
            <material name="dark_gray">
                <color rgba="0.2 0.2 0.2 1" />
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 0.3 0.02" />
            </geometry>
        </collision>
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" />
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
        </inertial>
    </link>

    <!-- Joint between hull and rudder -->
    <joint name="rudder_joint" type="revolute">
        <parent link="hull" />
        <child link="rudder" />
        <origin xyz="-1.5 0 -0.15" rpy="0 0 0" />
        <axis xyz="0 0 1" />
        <limit lower="-0.7854" upper="0.7854" effort="10" velocity="1" />
    </joint>

    <!-- Motor/Propeller -->
    <link name="motor">
        <visual>
            <geometry>
                <cylinder length="0.2" radius="0.05" />
            </geometry>
            <material name="silver">
                <color rgba="0.7 0.7 0.7 1" />
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.2" radius="0.05" />
            </geometry>
        </collision>
        <inertial>
            <mass value="2" />
            <origin xyz="0 0 0" />
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
        </inertial>
    </link>

    <!-- Joint between hull and motor (fixed) -->
    <joint name="motor_joint" type="fixed">
        <parent link="hull" />
        <child link="motor" />
        <origin xyz="-1.5 0 -0.25" rpy="0 0 0" />
    </joint>

</robot>
